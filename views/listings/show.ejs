<% layout("layouts/boilerplate.ejs") %>
<script>
    const mapToken = "<%= process.env.MAP_TOKEN %>";
    const listing = JSON.parse('<%- JSON.stringify(listing) %>');

</script>

<body>
    <div class="row mt-3">
        <div class="col-8 offset-3">
            <br>
            <h3><b><%= listing.title %></b></h3>
            <br>
        </div>
        <div class="card col-6 offset-3 show-card">
            <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image" />
            <div class="card-body">
                <p class="card-text">
                   <i>Owner: <b>@<%=  listing.owner.username %></b></i>
                    <br><br>
                    <%= listing.description %> <br>
                    &#8377; <%= listing.price.toLocaleString("en-IN")%> <br>
                    <%= listing.location %> <br>
                    <%= listing.country %>
                </p> 
            </div>
        </div>
    </div>

    
    
    <div class="btns">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark edit-btn col-sm-md-lg-1 offset-3">Edit</a>
        <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST">
            <button class="btn btn-dark offset-5">Delete </button>
        </form>
    </div><br>
    <hr>

    <% if(currUser){ %>
    <div class="col-6 offset-3 review-form" >
        <h4>Leave a Review...</h4>
        <form method="POST" action="/listings/<%= listing._id %>/reviews" novalidate class="needs-validation">
           
            <div class="mb-2 mt-3">
                <label for="rating" class="form-label">Rating</label>
            <fieldset class="starability-fade">   
                <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked aria-label="No rating." />
                <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                <label for="first-rate1" title="Terrible">1 star</label>
                <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                <label for="first-rate2" title="Not good">2 stars</label>
                <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                <label for="first-rate3" title="Average">3 stars</label>
                <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                <label for="first-rate4" title="Very good">4 stars</label>
                <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                <label for="first-rate5" title="Amazing">5 stars</label>
              </fieldset>
            </div>
            

            <div class="mb-3 mt-3">
                <label for="comment" class="form-label">Comments</label>
                <textarea name="review[comment]" id="comment" cols="30"
                          rows="5" placeholder="Enter review" class="form-control" required></textarea>
                <div class="invalid-feedback">Please add some commnets for review!</div>
            </div> 
            <button class="btn btn-dark add-btn mt-3">Add</button>
        </form> 
        <hr>
    </div>
    <% } %>
    
    <div class="col-4 offset-4 mb-3">
        <p><b>All Reviews</b></p>
        <% if(listing.reviews.length === 0) { %>
            <div class="card mb-3 text-center p-3" style="background-color: rgba(255,255,255,0.1); color: #fff;">
                <p>No reviews yet. Be the first to leave a review!</p>
                
            </div>
        <% } else { %>
            <% for(review of listing.reviews) { %>
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">@<%= review.author.username %></h5>
                        <p class="card-text"><%= review.comment %></p>
                        <p class="card-text starability-result" data-rating="<%= review.rating %>"></p>
                    </div>
                    <% if(currUser && currUser._id.equals(review.author._id)){ %>
                    <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" class="mb-3">
                        <button class="btn btn-dark delete-btn">Delete</button>
                    </form>
                    <% } %>
                </div>
            <% } %>
        <% } %>
    </div>
    
    

        <div class="col-8 offset-2 mt-3">
            <div class="card">
                <h3><b>Where you'll be</b></h3>
                <div class="map-body">
                        <div id="map" class="card-map"></div>
                </div>
            </div>
        </div>
    </div>    
</body>

<script src="/js/map.js"></script>