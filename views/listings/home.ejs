<% layout("/layouts/boilerplate.ejs") %>

<style>
  .home-bg {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background-image: url("https://images.unsplash.com/photo-1592490440473-b7f824510e50?q=80&w=1169&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D");
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    z-index: -1;
  }

  .home-overlay {
    position: relative;
    z-index: 1;
    height: 100vh;
    color: white;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-shadow: 1px 1px 4px black;
    text-align: center;
  }

  nav.navbar, footer {
    background: transparent !important;
  }

  .f-info {
    background-color: transparent !important;
  }

  .f-info-links a,
  .f-info-socials i,
  .f-info-brand {
    color: grey !important;
  }

  .f-info-links a:hover {
    text-decoration: underline;
  }

  .home-overlay {
        color: #ffffff;
        text-align: center;
        position: absolute;
        top: 40%;
        left: 50%;
        transform: translate(-50%, -40%);
        z-index: 10;
        padding: 0 1rem;
      }
    
      .home-overlay h1 {
        font-size: 3.5rem;
        font-weight: 700;
        color: #f4f4f4;
        text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.7);
      }
    
      .home-overlay p {
        font-size: 1.5rem;
        color: #e0e0e0;
        text-shadow: 1px 1px 6px rgba(0, 0, 0, 0.5);
      }
</style>

<!-- Background Image -->
<div class="home-bg"></div>

<!-- Content -->
<div class="home-overlay">
  <h1 class="display-3 fw-bold">Welcome to WanderLust</h1>
  <p class="lead">Find your next dream destination</p>
  <a href="/listings" class="btn btn-light btn-lg mt-3">Browse Listings</a>
</div>
